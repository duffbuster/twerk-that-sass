doctype
html(lang="en")
    head
        link(rel='stylesheet', href='/scripts/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/scripts/prism/themes/prism-twilight.css')
        link(rel='stylesheet', href='/css/global.css')
        title #{title}
    body(data-ng-app='twerkSASS')
        script(src='/scripts/prism/prism.js')
        nav.navbar.navbar-default.navbar-fixed-top.navbar-light.bg-faded
            div.container
                div.navbar-header
                    a(data-ui-sref="home" class="navbar-brand") #{title}
                div
                    ul.nav.navbar-nav
                        li(data-ng-class="{active: $state.includes('goals')}" class="nav-item")
                            a(data-ui-sref="goals" class="nav-link") Goals
                        li(data-ng-class="{active: $state.includes('dotnet')}" class="nav-item")
                            a(data-ui-sref="dotnet" class="nav-link") .NET
                        li(data-ng-class="{active: $state.includes('drupal')}" class="nav-item")
                            a(data-ui-sref="drupal" class="nav-link") Drupal
                        li(data-ng-class="{active: $state.includes('php')}" class="nav-item")
                            a(data-ui-sref="php" class="nav-link") PHP
                        li(data-ng-class="{active: $state.includes('nodejs')}" class="nav-item")
                            a(data-ui-sref="nodejs" class="nav-link") Node.js

        main.container
            section.slide(ui-view)

        script(src='/scripts/jquery/dist/jquery.min.js')
        script(src='/scripts/bootstrap/dist/js/bootstrap.min.js')
        script(src='/scripts/angular/angular.js')
        script(src='/scripts/angular-animate/angular-animate.min.js')
        script(src='/scripts/angular-ui-router/release/angular-ui-router.min.js')
        script(src='/app/twerkSASSApp.js')
        script angular.module('twerkSASS').constant('BASE_PATH', '/app');
        script(src='/app/twerkSASSAppConfig.js')
